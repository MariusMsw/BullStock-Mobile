<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mariusmihai.bullstock">

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@drawable/ic_trading"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_trading"
        android:supportsRtl="true"
        android:name=".core.BullStockApp"
        android:theme="@style/Theme.BullStock">
        <activity android:name=".MainActivity" />

        <activity android:name=".auth.AuthenticationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>